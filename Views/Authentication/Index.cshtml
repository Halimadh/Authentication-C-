@model WebApp.Models.Entities.LoginModel
@{

    ViewData["Title"] = "Home Page";
    Layout = "Auth_layout";
}
<div class="login-wrap">
    
    <form class="modal-content" method="POST" asp-controller="Authentication">
    <h2>Login</h2>
    <div class="form">
        <input placeholder="Email" value="moussa@gmail.com"  asp-for="Email" />
        <input  placeholder="Password" value="aa1234"  asp-for="Password" />
        <button asp-action="Login" type="submit"> Sign in </button>
        <a asp-action="" asp-controller="PasswordReset"> <p> Forgot password?</p></a>
        <a asp-action="" asp-controller="Register"> <p> Don't have an account? Register </p></a>
        
    </div>
    </form>
</div>


